<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/permissionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_celestial_orbit"
    android:fitsSystemWindows="false">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="137dp"
        android:layout_height="116dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/logo"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Permissions Required"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="To provide you with the best experience, we need a few permissions:\n\n• Notifications - for alarm reminders\n• Exact Alarms - for precise timing"
        android:textColor="@color/white_70"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grant Permissions button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGrantPermissions"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/growell_indigo"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Grant Permissions"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:textStyle="bold"
        app:cornerRadius="35dp"
        app:icon="@null"
        app:layout_constraintTop_toBottomOf="@id/txtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Skip button -->
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="84dp"
        android:text="Skip for now"
        android:textColor="@color/white_70"
        android:textSize="14sp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGrantPermissions" />

</androidx.constraintlayout.widget.ConstraintLayout>

